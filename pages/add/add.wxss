body {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  margin: 0;
  font-family: Arial, Helvetica, sans-serif;
  outline: none;
}
.input-wrapper {
  width: 450px;
  background-color: rgb(255, 255, 255);
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}
.title{
  text-align: center;
  color: #7171C6;
  font-size: 21px;
  text-transform: uppercase;
  font-weight: bolder;
}
.input-data {
  position: relative;
  margin-left: 70rpx;
  width: 80%;
  height: 40px;
  margin-top: 20px;
}
.input-data input {
  width: 100%;
  height: 100%;
  border: none;
  border-bottom: 2px solid silver;
  font-size: 17px;
  color: #838B8B;
}
.input-data .underline {
  position: absolute;
  bottom: -2px;
  left: 0;
  width: 100%;
  height: 2px;
  transition: all 0.3s ease;
  transform: scale(0);
}
.input-wrapper .input-submit {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  height: 60px;
  font-weight: 500;
}
.input-wrapper .input-upload input {
  padding: 10px 20px;
  border-radius: 50px;
  border: none;
  color: white;
  background: linear-gradient(-135deg, #c850c0, #4158d0);
}
